<h1>Eat-Da-Burger</h1>

<h2>Eat it!</h2>

<ul>
  {{#each burger}}
    {{#unless sleepy}}
      {{> burger/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burger}}
    {{#if sleepy}}
      {{> burger/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>